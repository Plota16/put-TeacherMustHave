<com.google.android.material.card.MaterialCardView
    android:id="@+id/classes_row_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:checkable="true"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/card_background"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <TextView
                    android:id="@+id/database_row1"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="1dp"
                    android:background="#04FFFFFF"
                    android:gravity="center"
                    android:text=" Text"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/database_row2"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="1dp"
                    android:layout_toEndOf="@id/database_row1"
                    android:background="#04FFFFFF"
                    android:gravity="center"
                    android:text=" Text"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/database_row3"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="1dp"
                    android:layout_toEndOf="@id/database_row2"
                    android:background="#04FFFFFF"
                    android:gravity="center"
                    android:text=" Text"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

        </RelativeLayout>
</com.google.android.material.card.MaterialCardView>


