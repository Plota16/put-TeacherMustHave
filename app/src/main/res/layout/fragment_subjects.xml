<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/select_class_tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/select_class_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/card_background">

            <RelativeLayout
                android:id="@+id/select_class_relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:background="@android:color/darker_gray">

                <TextView
                    android:id="@+id/select_class_column1"
                    android:layout_width="160dp"
                    android:layout_height="70dp"
                    android:layout_alignParentStart="true"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="Klasa"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/select_class_column2"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_toEndOf="@id/select_class_column1"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="Przedmiot"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>
    </TableLayout>
</ScrollView>