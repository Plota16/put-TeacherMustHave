<com.google.android.material.card.MaterialCardView
    android:id="@+id/template_row_tableLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:checkable="true"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/card_background"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <RelativeLayout
            android:id="@+id/template_row_relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <TextView
                    android:id="@+id/template_row_column1"
                    android:layout_width="160dp"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="1dp"
                    android:background="#04FFFFFF"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/template_row_column2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="1dp"
                    android:layout_toEndOf="@id/template_row_column1"
                    android:background="#04FFFFFF"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="14sp" />

        </RelativeLayout>
</com.google.android.material.card.MaterialCardView>


