<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.plocki.teacherDiary">

    <application
        android:name=".utility.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TeacherDiary">
        <activity android:name=".SelectClassActivity"></activity>
        <activity android:name=".activities.TestActivity" />
        <activity android:name=".activities.GradeActivity" />
        <activity android:name=".activities.PresenceActivity" />
        <activity android:name=".activities.SubjectEntryActivity" />
        <activity android:name=".activities.NonAuthorizedEntryActivity" />
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.LoginActivity" />
        <activity
            android:name=".activities.SplashActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>